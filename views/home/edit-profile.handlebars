<div class="row">
  <div class="col-lg-4">
    <div class="card mb-4">
      <div class="card-body text-center">
        <img src="https://ui-avatars.com/api/?name={{user.firstName}}+{{user.lastName}}" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
        <h5 class="my-3">{{user.firstName}} {{user.lastName}}</h5>
        <div class="d-flex justify-content-center mb-2">
          <button type="button" class="btn btn-outline-primary ms-1">Message</button>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">Edit Profile</h2>
        <hr>
    <form class="form-control" action="home/edit_profile/{{user.id}}?_method=PUT" method="post" enctype="multipart/form-data">
        <label for="firstName">First Name:</label>
        <input name="firstName" type="text" class="form-control" id="firstName" value="{{user.firstName}}">
    <div class="form-group">
        <label for="file">Last Name</label>
          <input name="title" type="text" class="form-control" id="lastName" value="{{user.lastName}}">
    </div>
    <div class="form-group">
        <label for="file">Location</label>
          <input name="title" type="text" class="form-control" id="lastName" value="{{user.location}}">
    </div>
    </div>
    </form>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card mb-4 mb-md-0">
      <div class="card-body">
        <h2 class="card-title">Your Posts</h2>
        <hr>
          <table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{title}}</td>
            <td>{{generateTime date 'DD MMMM YYYY'}}</td>
            <td>{{category.name}}</td>
            <td><a href="/post/{{id}}">View Post</a></td>
            <td><a href="/admin/posts/edit/{{_id}}" class="btn btn-info">Edit</a></td>
            <td><form action="/admin/posts/{{_id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete</button></form></td>
        </tr>
        {{/each}}
    </tbody>
</table>
      </div>
    </div>
  </div>
</div>
