<div class="row">
  <div class="col-lg-2">
    <div class="card mb-4">
      <div class="card-body text-center">
        <img src="https://ui-avatars.com/api/?name={{user.firstName}}+{{user.lastName}}" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
        <h5 class="my-3">{{user.firstName}}</h5>
        <div class="d-flex justify-content-center mb-2">
        </div>
      </div>
    </div>
    </div>
  <div class="col-lg-10">
    <div class="card mb-4 mb-md-0">
      <div class="card-body">
        <h2 class="card-title">Recent Posts</h2>
        <hr>
        <div class="row">
          {{#each posts}}
            <div class="col-md-2">
              <h5 class="text-muted mb-0">
                <a href="/post/{{this.slug}}">{{this.title}}</a></h5>
              <p class="text-muted mb-0"><img src="https://sparefins.s3.amazonaws.com/{{this.file}}" onerror="this.src='/images/sparefinsLogo.png';" style="width:100px; height:100%;"></p>
              <div>
        <span><span class="badge border text-secondary">{{type}}</span></span>
        <span><span class="badge border text-secondary">{{setup}}</span></span>
        <span><span class="badge border text-secondary">{{size}}</span></span>
      </div>
              <p class="text-muted mb-0">{{{this.body}}}</p>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  </div>