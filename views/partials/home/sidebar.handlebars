<div class="col-sm-2">
<div class="accordion" id="accordionExample">
    <div class="accordion-item">
    <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#filters" aria-expanded="true" aria-controls="collapseOne">
        Filters
        </button>
    </h2>
    <div id="filters" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
        <form action="/filter" method="get" id="filter-form">
            <div class="form-group" id="listingFinType">
            <strong><label for="listingFinType">Fin Type</label></strong>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="fcs" name="finType" value="fcs">
                <label class="form-check-label" for="fcs">FCS</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="fcs-2" name="finType" value="fcs2">
                <label class="form-check-label" for="fcs-2">FCS 2</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="futures" name="finType" value="futures">
                <label class="form-check-label" for="futures">Futures</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="other" name="finType" value="other">
                <label class="form-check-label" for="other">Other</label>
            </div>
            </div>
            <div class="form-group">
            <strong><label for="listingFinType">Fin Size</label></strong>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="finExtraSmall" name="finSize" value="extra-small">
                <label class="form-check-label" for="finExtraSmall">Extra Small</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="finSmall" name="finSize" value="small">
                <label class="form-check-label" for="finSmall">Small</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="finMedium" name="finSize" value="medium">
                <label class="form-check-label" for="finMedium">Medium</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="finLarge" name="finSize" value="large">
                <label class="form-check-label" for="finLarge">Large</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="finExtraLarge" name="finSize" value="extra-large">
                <label class="form-check-label" for="finExtraLarge">Extra Large</label>
            </div>
            </div>
            <div class="form-group">
            <strong><label for="listingFinType">Setup</label></strong>
            <div class="form-check">
                <input class="form-check-input filter-checkbox" type="checkbox" id="singleFin" name="finSetup" value="single-fin">
                <label class="form-check-label" for="singleFin">Single Fin</label>
            </div>
            <div class="form-check">
                <input class="form-check-input filter-checkbox" type="checkbox" id="twinFin" name="finSetup" value="twin-fin">
                <label class="form-check-label" for="twinFin">Twin Fin</label>
            </div>
            <div class="form-check">
                <input class="form-check-input filter-checkbox" type="checkbox" id="twoPlusOne" name="finSetup" value="two-plus-one">
                <label class="form-check-label" for="twoPlusOne">2 + 1</label>
            </div>
            <div class="form-check">
                <input class="form-check-input filter-checkbox" type="checkbox" id="thruster" name="finSetup" value="thruster">
                <label class="form-check-label" for="thruster">Thruster</label>
            </div>
            <div class="form-check">
                <input class="form-check-input filter-checkbox" type="checkbox" id="quadFin" name="finSetup" value="quad-fin">
                <label class="form-check-label" for="quadFin">Quad Fin</label>
            </div>
            </div>
            <div class="form-group">
            <label for="listingFinType">Position</label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="fullSet" name="finPosition" value="full-set">
                <label class="form-check-label" for="fullSet">Full Set</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="leftFront" name="finPosition" value="left-front">
                <label class="form-check-label" for="leftFront">Left Front</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="leftRear" name="finPosition" value="left-rear">
                <label class="form-check-label" for="leftRear">Left Rear</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="center" name="finPosition" value="center">
                <label class="form-check-label" for="center">Center</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="rightFront" name="finPosition" value="right-front">
                <label class="form-check-label" for="rightFront">Right Front</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="rightRear" name="finPosition" value="right-rear">
                <label class="form-check-label" for="rightRear">Right Rear</label>
            </div>
            </div>
            <button type="submit" class="btn btn-dark">Apply Filters</button>
        </form>
        </div>
    </div>
    </div>
</div>
</div>